{
    "compilerOptions": {        
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./lib",
        "strict": true,

        "resolveJsonModule": true,
        "removeComments": true,
        "preserveConstEnums": true,

        "noImplicitAny": true,
    },
    "include": [
        "src/**/*"
    ],
}